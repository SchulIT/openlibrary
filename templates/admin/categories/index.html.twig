{% extends 'main.html.twig' %}

{% block title %}{{ 'categories.menu'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.menu'|trans }}</a></li>
        <li class="breadcrumb-item active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <div class="d-flex flex-wrap mt-n2">
                <div class="flex-fill mt-2">
                    <form method="get" class="row row-cols-lg-auto g-1 align-items-center">
                        <div class="col">
                            <input class="form-control form-control-sm" type="text" name="query" placeholder="{{ 'filter.query.category'|trans }}" value="{{ query }}">
                        </div>

                        {% if query is not empty %}
                            <div class="col">
                                <a href="{{ path('admin_categories') }}" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-times-circle"></i>
                                </a>
                            </div>
                        {% endif %}
                    </form>
                </div>

                <div class="ms-auto mt-2 d-flex align-items-center">
                    {% if is_granted('new-category') %}
                        <a href="{{ path('admin_categories_add') }}" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> {{ 'categories.add.label'|trans }}
                        </a>
                    {% endif %}
                </div>
            </div>


        </div>

        {% if categories|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover table-striped card-table">
                    <colgroup>
                        <col class="column-md">
                        <col>
                        <col class="column-sm">
                    </colgroup>
                    <thead>
                    <tr>
                        <th>{{ 'categories.abbreviation'|trans }}</th>
                        <th>{{ 'categories.name'|trans }}</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td class="align-middle">
                                {{ category.abbreviation }}
                            </td>
                            <td class="align-middle">
                                {{ category.name }}
                            </td>
                            <td class="align-middle">
                                {% if is_granted('edit', category) %}
                                    <a href="{{ path('admin_categories_edit', { uuid: category.uuid }) }}" class="btn btn-outline-primary btn-sm" title="{{ 'categories.edit.label'|trans }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

        <div class="card-footer">
            <div class="d-flex">
                <div class="flex-fill align-self-center">
                    {{ 'categories.count'|trans({'%count%': categories.totalCount}) }}
                </div>

                <div class="ms-auto">
                    {% include '@Common/includes/pagination.html.twig' with {
                        currentFilters: {
                            query: query
                        },
                        currentPage: categories.page,
                        lastPage: categories.totalPages,
                        paginationPath: 'admin_categories',
                        showAlwaysFirstAndLast: true
                    } %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
